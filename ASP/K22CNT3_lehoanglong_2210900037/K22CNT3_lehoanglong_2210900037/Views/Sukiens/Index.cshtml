@model IEnumerable<K22CNT3_lehoanglong_2210900037.Models.Sukien>


<style>
    * {
        margin: 0px;
        padding: 0px;
    }

    .content {
        position: relative;
        left: 5%;
        width: 80%;
        height: 100%;
    }
</style>
<div class="content">

    <h2>Sự Kiện</h2>

    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
    </p>
    <table class="table table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tieude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.noidung)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.tieude)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.noidung)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ev_id }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ev_id }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ev_id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>