﻿@model K22CNT3_lehoanglong_2210900037.Models.danhgia

@{
    ViewBag.Title = "Edit";
}
<style>
    * {
        margin: 0px;
        padding: 0px;
    }

    .content {
        position: relative;
        left: 5%;
        width: 105%;
        height: 100%;
    }
</style>
<div class="content">

    <h2>Edit</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>danhgia</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.dg_id)

            <div class="form-group">
                @Html.LabelFor(model => model.user_id, "user_id", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("user_id", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.user_id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Đánh Giá</label>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.dg_value, (SelectList)ViewBag.TrangThaiList, "-- Vote --", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.dg_value, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ngaydg, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ngaydg, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ngaydg, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input style="margin:5px" type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

    <div style="margin:5px">
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-success" })
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</div>